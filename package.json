{
  "name": "zabbix-template-publisher",
  "displayName": "Zabbix Template Publisher",
  "description": "Publish Zabbix monitoring templates from properties to NextCloud and Zabbix with merged template support",
  "version": "2.0.1",
  "publisher": "shon-chen",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chengang12345632/zabbix-template-publisher-cursor.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "zabbix",
    "monitoring",
    "template",
    "nextcloud",
    "prometheus"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zabbix-template-publisher.testConnection",
        "title": "Test NextCloud Connection",
        "category": "Zabbix"
      },
      {
        "command": "zabbix-template-publisher.devMerge",
        "title": "🔧 开发测试 - 生成合并模板",
        "category": "Zabbix"
      },
      {
        "command": "zabbix-template-publisher.releaseMerge",
        "title": "🚀 生产发布 - 发布合并模板",
        "category": "Zabbix"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "zabbix-template-publisher.devMerge",
          "when": "resourceExtname == .properties",
          "group": "zabbix@1"
        },
        {
          "command": "zabbix-template-publisher.releaseMerge",
          "when": "resourceExtname == .properties",
          "group": "zabbix@2"
        }
      ],
      "editor/context": [
        {
          "command": "zabbix-template-publisher.devMerge",
          "when": "resourceExtname == .properties",
          "group": "zabbix@1"
        },
        {
          "command": "zabbix-template-publisher.releaseMerge",
          "when": "resourceExtname == .properties",
          "group": "zabbix@2"
        }
      ]
    },
    "configuration": {
      "title": "Zabbix Template Publisher",
      "properties": {
        "zabbix-template-publisher.nextcloud.url": {
          "type": "string",
          "default": "",
          "description": "NextCloud服务器URL (例如: https://your-nextcloud.com)"
        },
        "zabbix-template-publisher.nextcloud.username": {
          "type": "string",
          "default": "",
          "description": "NextCloud登录用户名（用于认证）"
        },
        "zabbix-template-publisher.nextcloud.webdavUsername": {
          "type": "string",
          "default": "",
          "description": "NextCloud WebDAV文件空间用户名（可选，如果与登录用户名不同，如 chengang_3074）"
        },
        "zabbix-template-publisher.nextcloud.password": {
          "type": "string",
          "default": "",
          "description": "NextCloud应用专用密码"
        },
        "zabbix-template-publisher.nextcloud.basePath": {
          "type": "string",
          "default": "/云平台开发部/监控模板",
          "description": "NextCloud存储基础路径"
        },
        "zabbix-template-publisher.nextcloud.releasePath": {
          "type": "string",
          "default": "zabbix_template_release",
          "description": "Release环境模板目录 (相对于basePath)"
        },
        "zabbix-template-publisher.nextcloud.mergedPath": {
          "type": "string",
          "default": "zabbix_template_release/merged",
          "description": "合并模板目录 (相对于basePath)"
        },
        "zabbix-template-publisher.zabbix.url": {
          "type": "string",
          "default": "",
          "description": "Zabbix测试环境URL (用于Dev环境测试，可选)"
        },
        "zabbix-template-publisher.zabbix.username": {
          "type": "string",
          "default": "",
          "description": "Zabbix测试环境用户名 (用于Dev环境测试，可选)"
        },
        "zabbix-template-publisher.zabbix.password": {
          "type": "string",
          "default": "",
          "description": "Zabbix测试环境密码 (用于Dev环境测试，可选)"
        },
        "zabbix-template-publisher.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["debug", "info", "warn", "error"],
          "description": "日志输出级别: debug(详细调试信息), info(一般信息), warn(警告), error(仅错误)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "xml2js": "^0.6.0"
  }
}

